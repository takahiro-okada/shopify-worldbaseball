}
@media screen and (min-width: 750px) {
  .c-contact__item{
    display: flex;
  }
  .c-contact__textbox{
    background-color: aliceblue;
    width: 50%;
  }
  .c-contact__main{
    background-color: #fff;
    border-right: 1px solid #C4C4C4;
    border-top: 1px solid #C4C4C4;
    border-bottom: 1px solid #C4C4C4;
    width: 50%;
  }
}
