  {
    "name": "レイアウト",
    "settings": [
      {
        "type": "header",
        "content": "アニメーション"
      },
      {
        "type": "checkbox",
        "id": "animations_enable",
        "label": "アニメーションを有効にする",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "parallax_enable",
        "label": "パララックス効果を有効にする",
        "info": "一部の大きな画像では、スクロール方向と逆の動きをするアニメーションが表示されます。",
        "default": true
      },
      {
        "type": "range",
        "id": "parallax_strength",
        "min": 0,
        "max": 100,
        "step": 5,
        "label": "パララックスの強さ",
        "default": 20,
        "info": "パララックスが強いと、画像がズームアップしてしまいます。低めの強度を推奨します。"
