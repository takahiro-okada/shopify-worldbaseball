<!-- /sections/custom-html.liquid -->
{%- assign html = section.settings.html -%}
{%- assign title = section.settings.title -%}
{%- assign show_padding = section.settings.show_padding -%}

<section class="product-link {% if show_padding %}wrapper custom-html-section--padding {% endif %}" data-section-id="{{ section.id }}" data-section-type="custom-html">
  <h3>{{ section.settings.title }}</h3>
  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'title' -%}
      <p>{{ block.settings.sub_title }}</p>
      {%- when 'link' -%}
      <a href="{{ block.settings.link }}">{{ block.settings.link_text }}</a>
      {% endcase %}
  {%- endfor -%}
</section>

{% schema %}
{
  "name": "商品リンク集",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "タイトル"
    },
    {
      "type": "checkbox",
      "id": "show_padding",
      "label": "余白を表示する",
      "default": true
    }
  ],
  "blocks":[
    {
      "type": "title",
      "name": "見出し",
      "settings": [
        {
          "type": "text",
          "id": "sub_title",
          "label": "サブタイトル",
          "default": "見出し"
        }
      ]
    },
    {
      "type": "link",
      "name": "リンク先",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "リンクテキスト",
          "default": "テキスト"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "商品リンク集"
    }
  ]
}
{% endschema %}
