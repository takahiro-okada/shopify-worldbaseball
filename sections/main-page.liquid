<!-- /sections/main-page.liquid -->
{%- assign animation_anchor = '#page--' | append: section.id -%}

{% if section.settings.show_content or section.settings.subheading != blank or section.settings.show_title %}
  <section class="index-page {{ section.settings.text_color }} {{ section.settings.height }}" id="page--{{ section.id }}" style="background-color: {{ section.settings.bg_color }};" data-section-id="{{ section.id }}" data-section-type="page">
    <div class="{{ section.settings.width }}">
      <div class="text__standard {{ section.settings.align_text }}">
        {% if section.settings.subheading != blank %}
          <p class="standard__subheading"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="1">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
        {% if section.settings.show_title %}
          <h2 class="h4 standard__heading"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="2">
            {{ page.title }}
          </h2>
        {% endif %}
        {% if section.settings.show_content %}
          {% assign font_size_class = section.settings.text_size | plus: 1 | prepend: 'font--' %}
          <div class="standard__rte {{ font_size_class }}"
            data-aos="hero"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-order="3">
            <div class="rte">{{ page.content }}</div>
          </div>
        {% endif %}
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "ページ",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "サブ見出し"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "タイトルを表示する",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_content",
      "label": "コンテンツを表示する",
      "default": true
    },
    {
      "type":  "range",
      "id":    "text_size",
      "label": "文字のサイズ",
      "min":    1,
      "max":    5,
      "step":   1,
      "default":2
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "位置",
      "default": "text-left",
      "options": [
        {"value": "text-left","label": "左"},
        {"value": "text-center","label": "中央"}
      ]
    },
    {
      "type": "header",
      "content": "スタイル"
    },
    {
      "type": "select",
      "id": "height",
      "label": "高さ",
      "default": "margin--medium",
      "options": [
        {"value": "margin--small", "label": "スモール"},
        {"value": "margin--medium", "label": "ミディアム"},
        {"value": "margin--large", "label": "ラージ"}
      ]
    },
    {
      "type": "select",
      "id": "width",
      "label": "幅",
      "default": "wrapper",
      "options": [
        {"value": "wrapper", "label": "ノーマル"},
        {"value": "wrapper--narrow", "label": "狭い"},
        {"value": "wrapper--full", "label": "広い"}
      ]
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "文字の色",
      "default": "text-dark",
      "options": [
        { "value": "text-light", "label": "白"},
        { "value": "text-dark", "label": "ダーク"}
      ]
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景色",
      "default": "#ffffff"
    }
  ]
}
{% endschema %}
