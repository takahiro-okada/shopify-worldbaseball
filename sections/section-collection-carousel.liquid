<!-- /sections/section-collection-carousel.liquid -->

{%- render 'products-layout' section: section -%}

{% schema %}
  {
      "name": "コレクションカルーセル",
      "settings": [
        {
          "type": "header",
          "content": "コンテンツ"
        },
        {
          "label": "見出し",
          "id": "heading",
          "type": "text",
          "default": "Collection"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "テキスト"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "テキスト位置",
          "options": [
            {
              "value": "inline",
              "label": "インライン"
            },
            {
              "value": "center",
              "label": "センター"
            },
            {
              "value": "left",
              "label": "左"
            }
          ],
          "default": "inline"
        },
        {
          "type": "header",
          "content": "ボタン"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "テキスト",
          "default": "Shop All"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "リンク先"
        },
        {
          "type": "select",
          "id": "button_color",
          "label": "色",
          "default": "btn--black",
          "options": [
            {"value": "btn--primary", "label": "メインアクセント色"},
            {"value": "btn--secondary", "label": "サブアクセント色"},
            {"value": "btn--link", "label": "リンクの色"},
            {"value": "btn--neutral", "label": "文字の色"},
            {"value": "btn--black", "label": "黒色"},
            {"value": "btn--white", "label": "白色"}
          ]
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "スタイル",
          "default": "hero__btn btn btn--input btn--outline caps",
          "options": [
            {"value": "caps--large", "label": "文字のみを表示"},
            {"value": "hero__btn btn btn--input caps", "label": "小さいボタン"},
            {"value": "hero__btn btn btn--large caps", "label": "大きいボタン"},
            {"value": "hero__btn btn btn--input btn--outline caps", "label": "小さいボタン（枠あり）"},
            {"value": "hero__btn btn btn--large btn--outline caps", "label": "大きいボタン（枠あり）"}
          ]
        },
        {
          "type": "header",
          "content": "商品"
        },
        {
          "type": "collection",
          "id": "featured_collection",
          "label": "コレクション"
        }
      ],
      "presets": [
        {
          "category": "Collection",
          "name": "コレクションカルーセル"
        }
      ]
  }
{% endschema %}
