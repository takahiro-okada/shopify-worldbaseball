<!-- /sections/section-collection.liquid -->

{%- render 'products-layout' section: section -%}

{% schema %}
  {
      "name": "特集コレクション",
      "settings": [
        {
          "type": "header",
          "content": "内容"
        },
        {
          "label": "見出し",
          "id": "heading",
          "type": "text"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "説明"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "テキスト位置",
          "options": [
            {
              "value": "inline",
              "label": "インライン"
            },
            {
              "value": "center",
              "label": "中央"
            }
          ],
          "default": "center"
        },
        {
          "type": "header",
          "content": "ボタン"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "テキスト"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "リンク"
        },
        {
          "type": "select",
          "id": "button_color",
          "label": "色",
          "default": "btn--black",
          "options": [
            {"value": "btn--primary", "label": "メインアクセント色"},
            {"value": "btn--secondary", "label": "サブアクセント色"},
            {"value": "btn--link", "label": "リンクの色"},
            {"value": "btn--neutral", "label": "文字の色"},
            {"value": "btn--black", "label": "黒色"},
            {"value": "btn--white", "label": "白色"}
          ]
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "スタイル",
          "default": "hero__btn btn btn--input btn--outline caps",
          "options": [
            {"value": "caps--large", "label": "文字のみを表示"},
            {"value": "hero__btn btn btn--input caps", "label": "小さいボタン"},
            {"value": "hero__btn btn btn--large caps", "label": "大きいボタン"},
            {"value": "hero__btn btn btn--input btn--outline caps", "label": "小さいボタン（枠あり）"},
            {"value": "hero__btn btn btn--large btn--outline caps", "label": "大きいボタン（枠あり）"}
          ]
        },
        {
          "type": "header",
          "content": "商品"
        },
        {
          "type": "collection",
          "id": "featured_collection",
          "label": "コレクション"
        },
        {
          "type":    "range",
          "id":      "grid",
          "min":     2,
          "max":     6,
          "step":    1,
          "label":   "1行あたりの商品数",
          "default": 4
        },
        {
          "type":    "range",
          "id":      "rows",
          "min":     1,
          "max":     8,
          "step":    1,
          "label":   "行数",
          "default": 3
        },
        {
          "type": "header",
          "content": "モバイル"
        },
        {
          "type": "select",
          "id": "layout_mobile",
          "label": "レイアウト",
          "options": [
            {
              "value": "1",
              "label": "1カラム"
            },
            {
              "value": "2",
              "label": "2カラム"
            },
            {
              "value": "carousel",
              "label": "カルーセル"
            }
          ],
          "default": "carousel"
        },
        {
          "type": "range",
          "id": "desk_space",
          "min": 0,
          "max": 300,
          "step": 10,
          "unit": "px",
          "label": "PCサイズのスペーサー",
          "default": 50
        },
        {
            "type": "range",
            "id": "mobile_space",
            "min": 0,
            "max": 300,
            "step": 10,
            "unit": "px",
            "label": "スマホサイズのスペーサー",
            "default": 50
        },
        {
          "type": "color",
          "id": "bg_color",
          "label": "背景の色",
          "default": "#fafafa"
        }
      ],
      "presets": [
        {
          "category": "Collection",
          "name": "特集コレクション"
        }
      ]
  }
{% endschema %}
